extends ../layouts/user

block cssStyle 
    link(href="/css/track.css" rel="stylesheet")

block jsScript 
    script(src="/js/track.js") 

block content 
    .container.tracker
      article.card
        header.card-header My Orders / Tracking
        .card-body
          article.card
            .card-body.row
              .col
                strong Estimated Delivery time:
                br
                | 02:30 PM
                br
                | 01/01/2024
              .col
                strong Shipping To:
                br
                |                 Your Address
              .col
                strong Status:
                br
                |                  In progress
          .track
            .step
              span.icon
                i.fa.fa-check
              span.text Order confirmed
            .step
              span.icon
                i.fa.fa-user
              span.text  Picked by courier
            .step
              span.icon
                i.fa.fa-truck
              span.text  On the way 
            .step
              span.icon
                i.fa.fa-box
              span.text Ready for pickup
          .mb-3
